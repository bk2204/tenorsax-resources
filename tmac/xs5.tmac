.do tenorsax ext 1
.mso xtm
.de @init
.ie !'\\$1'' .ds @theme "\\$1
.el .ds @theme default
.nr @first-slide 1
.@tm-init
..
.de slide
.@tm-end-meta
.if !\\n[@first-slide] .@next-slide
.nr @first-slide 0
.start tm:section type=slide
.start tm:title
\&\\$1
.end tm:title
..
.de @next-slide
.@tm-end-section
..
.als done @tm-done
.als presentation @init
